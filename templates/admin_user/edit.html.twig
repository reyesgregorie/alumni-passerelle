{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center my-5">Modification du compte</h1>
    {{ form_start(form) }}
        {{ form_row(form.urlavatar) }}
        {{ form_row(form.promotion) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.role) }}
        {{ form_row(form.email) }}
        {{ form_row(form.city) }}
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('app_adminuser_index') }}" class="btn btn-outline-secondary">Retour</a>
    {{ form_end(form) }}
{% endblock %}
